{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "esnext.asynciterable"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },
  "include": [
    "src/index.ts",
    "src/cli.ts", 
    "beam/schema.gen.ts"
  ],
  "exclude": [
    "src/__tests__/**.*"
  ]
}
